<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       	   http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.1.xsd  
           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<beans:bean id="StatusLogInterceptor"
		class="romaneo.unificado.aop.logging.interceptor.StatusLogInterceptor">
		<beans:property name="usuarioService" ref="UsuarioService" />
		<beans:property name="loggingService" ref="LoggingService" />
	</beans:bean>

	<aop:config>
		<aop:pointcut id="fireMethod"
			expression="execution(* romaneo.unificado.stateMachine.State.fire(..))" />
		<aop:advisor pointcut-ref="fireMethod" advice-ref="StatusLogInterceptor" />
	</aop:config>

</beans:beans>