<?page contentType="text/html;charset=UTF-8"?>
<zk xmlns:w="client" xmlns:n="xhtml">
	<window id="acondicionadorFormWndw" border="normal" width="450px"
		closable="true"
		apply="romaneo.unificado.controllers.acondicionador.AcondicionadorFormController">

		<style src="/css/form.css" />

		<vlayout style="margin: 15px;">

			<grid fixedLayout="true" sclass="grid-form">
				<columns>
					<column align="right" width="70px"></column>
					<column></column>
				</columns>
				<rows>

					<row sclass="row-form">
						<label value="${labels.persona.nombre}" />
						<textbox id="nombreTxtbx" maxlength="50"
							hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label
							value="${labels.persona.apellido}" />
						<textbox id="apellidoTxtbx" maxlength="50"
							hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label value="${labels.persona.dni}" />
						<intbox id="dniIntbx" maxlength="8"
							constraint="no negative" hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label value="${labels.persona.telefono}" />
						<textbox id="phonesTxtbx" maxlength="30"
							hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label value="${labels.persona.email}" />
						<textbox id="emailTxtbx" maxlength="70"
							hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label value="${labels.persona.direccion}" />
						<textbox id="addressTxtbx" maxlength="150"
							hflex="1" class="form-control" />
					</row>

					<row sclass="row-form">
						<label value="${labels.persona.localidad}" />
						<bandbox id="cityBndbx" hflex="1"
							readonly="true" autodrop="true">
							<bandpopup>
								<vbox>
									<hbox align="center"
										pack="center">
										<textbox id="citySearchTxtbx"
											placeholder="${labels.app.search}" hflex="1"
											class="form-control" />
									</hbox>
									<listbox id="citiesLstbx"
										height="300px" width="300px" mold="paging" pageSize="10"
										onSelect="cityBndbx.value=self.selectedItem.label; cityBndbx.close();"
										visible="false">
										<listhead>
											<listheader
												label="${labels.persona.localidad}" sort="auto" />
										</listhead>
									</listbox>
								</vbox>
							</bandpopup>
						</bandbox>
					</row>

				</rows>
			</grid>

		</vlayout>

		<div sclass="container-buttons-form">
			<hbox pack="end" width="100%">
				<button id="acceptBttn" iconSclass="z-icon-check"
					label="${labels.app.accept}" sclass="btn btn-primary btn-sm" />
				<button id="cancelBttn" iconSclass="z-icon-times"
					label="${labels.app.cancel}" sclass="btn btn-default btn-sm" />
			</hbox>
		</div>
	</window>
</zk>